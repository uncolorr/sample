<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            android:orientation="horizontal">

            <TextView
                style="@style/TitleMediumTextViewStyle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:text="Меню" />

        </LinearLayout>


        <com.google.android.material.button.MaterialButton
            android:id="@+id/buttonPutObject"
            style="@style/Widget.MaterialComponents.Button.Icon"
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:layout_gravity="end"
            android:layout_marginBottom="12dp"
            android:text="@string/main_action_put_object"
            android:textAllCaps="false"
            app:backgroundTint="@color/colorBlue"
            app:icon="@drawable/ic_qr"
            app:iconSize="16dp"
            app:iconGravity="textStart" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/buttonTakeObject"
            style="@style/Widget.MaterialComponents.Button.Icon"
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:layout_gravity="end"
            android:layout_marginBottom="12dp"
            android:text="@string/main_action_take_object"
            android:textAllCaps="false"
            app:backgroundTint="@color/colorBlue"
            app:icon="@drawable/ic_qr"
            app:iconSize="16dp"
            app:iconGravity="textStart" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="16dp"
            android:orientation="horizontal">

            <TextView
                style="@style/TitleMediumTextViewStyle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:text="Сотрудники" />

        </LinearLayout>


        <androidx.cardview.widget.CardView
            android:id="@+id/cardViewEmployee"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="12dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="12dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Cотрудник"
                    android:textSize="12sp"
                    android:paddingTop="6dp"
                    android:paddingBottom="6dp"
                    android:paddingStart="12dp"
                    android:paddingEnd="12dp"
                    android:layout_marginBottom="8dp"
                    android:textColor="@android:color/white"
                    android:background="@drawable/type_data_founded_drawable"/>

                <TextView
                    android:id="@+id/textViewEmployeeName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:textColor="@color/colorLightBlack"
                    tools:text="Иванов Аркадий Сергеевич"/>

            </LinearLayout>

        </androidx.cardview.widget.CardView>


        <com.google.android.material.button.MaterialButton
            android:id="@+id/buttonLogout"
            style="@style/Widget.MaterialComponents.Button.Icon"
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:layout_gravity="end"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="12dp"
            android:text="@string/main_action_exit"
            android:textAllCaps="false"
            app:backgroundTint="@color/colorRed"
            app:icon="@drawable/ic_exit"
            app:iconGravity="textStart" />

    </LinearLayout>
</ScrollView>
